<div class="container">
 <h1>Application Event Analysis</h1>
 <h2><%= @registered_application.name %></h2>
 <h4><%= @registered_application.url %></h4>
 <table style="width: 20%" class="table table-bordered">
     <tr>
       <th>Event Name</th>
       <th>Occurance</th>
     </tr>
     <% @events.each do |event, event_occurence|%>
       <tr>
         <td><%= event %></td>
         <td><%= event_occurence.count %></td>
       </tr>
     <% end %>
  </table>
  <div class="row">
    <div class="col-md-14">
      <table class="table">
        <thead>
          <tr>
            <th class="center col-md-5"></th>
            <th class="center"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
            <td class="center"><%= pie_chart @registered_application.events.group(:name).count %></td>
            <td <%= line_chart @registered_application.events.group_by_day(:created_at).count %></td>
          </tr>
          <tr>
            <td class="center bold">Event Distribution</td>
            <td class="center bold">Event Tmeline</td>
        </tbody>
      </table>
    </div>
  </div>
</div>

 <div class="row">
   <div class="col-md-8">
     <%= link_to 'Return to Applications', registered_applications_path %>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit Application", edit_registered_application_path(@registered_application), class: 'btn btn-success' %>
     <%= link_to "Delete Application", @registered_application, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this application?'} %>
   </div>
 </div>
